<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/color_primary" />
            <stroke android:width="1dp" android:color="@color/color_primary" />
            <padding android:left="16dp"
                android:right="16dp"/>
            <corners android:topRightRadius="8dp"
                android:bottomRightRadius="8dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <padding android:left="16dp"
                android:right="16dp"/>
            <corners android:topRightRadius="8dp"
                android:bottomRightRadius="8dp"/>
            <stroke android:width="1dp" android:color="@color/color_primary" />
        </shape>
    </item>


</selector>